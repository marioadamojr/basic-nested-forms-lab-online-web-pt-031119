<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.fields_for :ingredients do |ingre| %>
    <%= ingre.label :name %>
    <%= ingre.text_field :name %><br>

    <%= ingre.label :quantity %>
    <%= ingre.text_field :quantity %><br>

    <%= ingre.label :ingredients_type %>
    <%= ingre.text_field :ingredients_type %><br>
  <% end %>

  <%= f.submit %>
<% end %>
